{
  "name": "@infineon/design-system-tokens",
  "version": "1.0.2",
  "private": false,
  "description": "Infineon design system token definitions",
  "homepage": "https://github.com/Infineon/IFX-Design-System-Tokens#readme",
  "bugs": {
    "url": "https://github.com/Infineon/IFX-Design-System-Tokens/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Infineon/IFX-Design-System-Tokens.git"
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "author": "Infineon Technologies AG",
  "scripts": {
    "copy-fonts": "cp -a src/tokens/fonts .storybook",
    "build-docs": "node tools/createMarkdownStories.js",
    "build-storybook": "build-storybook",
    "build-tokens": "node ./tools/styleDictionary.js",
    "build": "yarn copy-fonts && yarn build-tokens && yarn build-docs && yarn build-storybook",
    "watch-docs": "chokidar \"*.md\" -c \"yarn build-docs\" --initial",
    "watch-storybook": "start-storybook -p 6006",
    "watch-tokens": "chokidar \"src/tokens/*.json\" -c \"yarn build-tokens\" --initial",
    "start": "yarn copy-fonts && concurrently -r yarn:watch-*",
    "bundle-css": "sass --style=compressed --no-source-map .storybook/fonts.scss dist/fonts.css",
    "bundle-tokens": "copyfiles -u src/tokens/_tokens.scss dist/_tokens.scss",
    "bundle-fonts": "copyfiles -u 2 ./src/tokens/fonts/**/* dist",
    "bundle": "yarn build-tokens && concurrently -r yarn:bundle-*"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-brands-svg-icons": "^5.15.4",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "bootstrap": "^5.1.3",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.1.0",
    "prop-types": "^15.7.2"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "@babel/core": "^7.16.0",
    "@storybook/addon-actions": "^6.4.8",
    "@storybook/addon-essentials": "^6.4.8",
    "@storybook/addon-links": "^6.4.8",
    "@storybook/builder-webpack5": "^6.4.8",
    "@storybook/html": "^6.4.8",
    "@storybook/manager-webpack5": "^6.4.8",
    "babel-loader": "^8.2.3",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^6.4.0",
    "css-loader": "^6.5.1",
    "esbuild": "^0.14.38",
    "holderjs": "^2.9.9",
    "sass": "^1.44.0",
    "sass-loader": "^12.3.0",
    "storybook-design-token": "^1.4.0",
    "style-dictionary": "^3.0.3",
    "style-loader": "^3.3.1",
    "webpack": "^5.65.0"
  }
}
