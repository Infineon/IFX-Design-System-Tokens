{
  "name": "infineon-design-system",
  "version": "1.0.0",
  "private": true,
  "description": "infineon design system",
  "homepage": "https://github.com/kickstartDS/infineon-design-system#readme",
  "bugs": {
    "url": "https://github.com/kickstartDS/infineon-design-system/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kickstartDS/infineon-design-system.git"
  },
  "license": "ISC",
  "author": "Lukas Mestel",
  "scripts": {
    "copy-fonts": "cp -a src/tokens/fonts .storybook",
    "build-storybook": "build-storybook",
    "build-tokens": "node ./tools/styleDictionary.js",
    "build": "yarn copy-fonts && yarn build-tokens && yarn build-storybook",
    "watch-storybook": "start-storybook -p 6006",
    "watch-tokens": "chokidar \"src/tokens/*.json\" -c \"yarn build-tokens\" --initial ",
    "start": "yarn copy-fonts && concurrently -r yarn:watch-*",
    "bundle-css": "sass --style=compressed --no-source-map .storybook/index.scss dist/index.css",
    "bundle-js": "esbuild src/index.js --outfile=dist/index.js --bundle --platform=browser --minify",
    "bundle-fonts": "cp -a src/tokens/fonts dist",
    "bundle-assets": "cp -a public/. dist",
    "bundle": "yarn build-tokens && concurrently -r yarn:bundle-*",
    "chromatic": "chromatic --build-script-name=build --exit-once-uploaded"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "@fortawesome/fontawesome-pro": "^6.1.1",
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-brands-svg-icons": "^5.15.4",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/pro-light-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.1.16",
    "bootstrap": "^5.1.3",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-bootstrap": "^2.0.3",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@storybook/addon-actions": "^6.4.8",
    "@storybook/addon-essentials": "^6.4.8",
    "@storybook/addon-links": "^6.4.8",
    "@storybook/builder-webpack5": "^6.4.8",
    "@storybook/manager-webpack5": "^6.4.8",
    "@storybook/react": "^6.4.8",
    "@whitespace/storybook-addon-html": "git+https://github.com/lmestel/storybook-addon-html.git",
    "babel-loader": "^8.2.3",
    "chokidar-cli": "^3.0.0",
    "chromatic": "^6.2.0",
    "concurrently": "^6.4.0",
    "css-loader": "^6.5.1",
    "esbuild": "^0.14.25",
    "holderjs": "^2.9.9",
    "sass": "^1.44.0",
    "sass-loader": "^12.3.0",
    "storybook-design-token": "^1.4.0",
    "style-dictionary": "^3.0.3",
    "style-loader": "^3.3.1",
    "webpack": "^5.65.0"
  }
}
